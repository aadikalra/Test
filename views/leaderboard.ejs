<%- include('layout') %>
    <div class="container mt-2">
        <div class="content">
            <h2 class="text-center"  style="        font-size: 30px;
            font-weight: bold;
            text-align: center;
            color: #333;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;">Leaderboard</h2>
            <ul class="list-group">
                <% competitors.forEach((competitor, index)=> { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span class="d-flex align-items-center flex-direction-row">
                            <% if (index == 0) { %>
                                <div id="one" class="badge">
                                    <%= index + 1%>
                                </div>
                            <% } else if (index == 1) { %>
                                <div id="two" class="badge">
                                    <%= index + 1%>
                                </div>
                            <% } else if (index == 2) { %>
                                <div id="three" class="badge">
                                    <%= index + 1%>
                                </div>
                            <% } else { %>
                                <div class="badge">
                                    <%= index + 1%>
                                </div>
                            <% } %>
                            <h2 class="mb-0" style="margin-left: 1rem;">
                                <%= competitor.name %>
                            </h2>
                        </span>
                        <span class="badge badge-primary badge-pill">
                            <%= competitor.totalWater %> ml
                        </span>
                    </li>
                    <% }) %>
            </ul>
            <div class="text-center mt-4">
                <a href="/" class="btn btn-primary">Go back to the main page</a>
            </div>
        </div>
    </div>
    <style>
        .badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 2rem;
            height: 2rem;
            color: var(--dark);
            border-radius: 0.4rem;
        }

        #one {
            background: #fdcb6e;
        }

        #two {
            background: #e17055;
        }

        #three {
            background: #0984e3;
        }
    </style>