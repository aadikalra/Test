<%- include('layout') %>

<div class="container mt-3">
    <h1 class="text-center">Water Intake for <%= competitor.name %></h1>
    <ul class="list-group mt-4">
        <% competitor.waterLog.forEach(log => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="h5 mb-0"><%= log.date %> - <%= log.amount %> ml</h2>
                </div>
            </li>
        <% }) %>
    </ul>
</div>
