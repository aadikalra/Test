<%- include('layout') %>
<div class="container mt-5">
    <h1 class="text-center">Water Tracker</h1>

    <form action="/add-competitor" method="POST" class="row g-3">
        <div class="col-auto">
            <input type="text" name="name" class="form-control" placeholder="Competitor Name" required>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Add Competitor</button>
        </div>
    </form>

    <% if (tempPassword) { %>
        <div class="alert alert-success mt-3 alert-dismissible fade show" role="alert">
            New competitor added! Your password is: <strong><%= tempPassword %></strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <ul class="list-group mt-4">
        <% competitors.forEach(competitor => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="h5 mb-0"><%= competitor.name %> - <%= competitor.totalWater %> ml</h2>
                </div>
                <div class="d-flex">
                    <form action="/log-water" method="POST" class="d-flex" onsubmit="return promptForPassword(this)">
                        <input type="hidden" name="name" value="<%= competitor.name %>">
                        <input type="number" name="amount" class="form-control me-2" placeholder="Amount (ml)" min="1" required>
                        <input type="hidden" name="password">
                        <button type="submit" class="btn btn-success me-2">Log Water</button>
                    </form>
                    <form action="/delete-competitor" method="POST" class="d-flex" onsubmit="return promptForPassword(this)">
                        <input type="hidden" name="name" value="<%= competitor.name %>">
                        <input type="hidden" name="password">
                        <button type="submit" class="btn btn-danger me-2">Delete Competitor</button>
                    </form>
                </div>
            </li>
        <% }) %>
    </ul>

    <div class="text-center mt-3">
        <a href="/leaderboard" class="btn btn-primary">View Leaderboard</a>
    </div>
</div>

<script>
function promptForPassword(form) {
    var password = prompt("Please enter your password:");
    if (password) {
        form.password.value = password;
        return true;
    }
    return false;
}
</script>
